{
    "name": "Taskwarror for Chrome",
    "version": "1.0",
    "description": "List, add and modify tasks from Chrome",
    "permissions": [
      "storage",
      "alarms",
      "tabs",
      "https://inthe.am/api/v2/*"
    ],
		"background": {
		  "scripts": [
        "sync.js",
        "background.js"
      ],
      "persistent":false
		},
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "19": "images/icon19.png",
        "38": "images/icon38.png"
      }
    },
    "icons": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "options_page": "options.html",
    "commands": {
			"_execute_browser_action": {
				"suggested_key": {
					"windows": "Alt+Shift+K",
					"mac": "Alt+Shift+K",
					"chromeos": "Alt+Shift+K",
					"linux": "Alt+Shift+K"
				}
			}
    },
    "manifest_version": 2
}
